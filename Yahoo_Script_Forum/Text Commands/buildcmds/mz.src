include "include/modules";

program  mz( who )
	var howfar := SendTextEntryGump( who, "How far in the negative z direction?" );
	SendSysMessage( who, "Select the item to move" );
	var what := Target(who, TGTOPT_NOCHECK_LOS);
	if (!what)
		return;
	endif
	howfar := CInt(howfar);
	if( !howfar )
		howfar := 1;
	endif
	MoveItemToLocation( what, what.x, what.y, what.z - howfar, MOVEITEM_FORCELOCATION );
endprogram